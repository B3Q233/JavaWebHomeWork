<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--servlet 配置-->

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.xxx.servlet.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.xxx.servlet.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>redirect</servlet-name>
        <servlet-class>com.xxx.servlet.redirect</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createCaptcha</servlet-name>
        <servlet-class>com.xxx.servlet.generateCaptcha</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getData</servlet-name>
        <servlet-class>com.xxx.servlet.getData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>handle</servlet-name>
        <servlet-class>com.xxx.servlet.handle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getNewsList</servlet-name>
        <servlet-class>com.xxx.servlet.getNewsBrief</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>uploadImg</servlet-name>
        <servlet-class>com.xxx.servlet.upLoadImg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addNews</servlet-name>
        <servlet-class>com.xxx.servlet.addNews</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getNews</servlet-name>
        <servlet-class>com.xxx.servlet.getSpecificNews</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateSiteInformation</servlet-name>
        <servlet-class>com.xxx.servlet.updateSiteInformation</servlet-class>
    </servlet>

    <!--servlet 映射-->

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>redirect</servlet-name>
        <url-pattern>/redirect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createCaptcha</servlet-name>
        <url-pattern>/createCaptcha</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getData</servlet-name>
        <url-pattern>/getdata</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>handle</servlet-name>
        <url-pattern>/handle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getNewsList</servlet-name>
        <url-pattern>/getNewsList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>uploadImg</servlet-name>
        <url-pattern>/uploadImg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addNews</servlet-name>
        <url-pattern>/addNews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getNews</servlet-name>
        <url-pattern>/getNews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateSiteInformation</servlet-name>
        <url-pattern>/updateSiteInform</url-pattern>
    </servlet-mapping>

    <!--过滤器配置-->

    <!--后台管理员登录-->
    <filter>
        <filter-name>adminManagerAccess</filter-name>
        <filter-class>com.filter.AdminManagerAccess</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>adminManagerAccess</filter-name>
        <url-pattern>/layout-admin.jsp</url-pattern>
    </filter-mapping>


</web-app>